extends layout

block content
  .navbar-top
  .navbar
    a(href="/logout") Logout
    a(href="/home") Home
    a(href="/profile/" + id) Profile
  .all
    .header
      h1 Meeting about #{theMeeting.topic}
    .content
      div
        p Meeting with: 
          a(href="/profile/" + theMeeting.inviteeId) #{theMeeting.invitee}
        p Scheduled by: 
          a(href="/profile/" + theMeeting.creatorId) #{theMeeting.creator}
      div
        p Scheduled for: #{theMeeting.date}
      a(href="/meeting/" + theMeeting._id + "/edit") Edit this meeting
  .footer
    a(href="https://github.com/jaylynstoesz" target="_blank") Github
    a(href="/deleteAcct") Delete Account
